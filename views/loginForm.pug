extends layout

block content
  div(class="formDiv")
    h1= title
   
    form(action="", method="post") 
      label(for="username") #[strong Username:]
      input(type="email", name="username" value=(undefined===username ? "" : username))
      label(for="password") #[strong Password:]
      input(type="password", name="password")
      button(type="submit") Submit

      if errors
        ul
          for error in errors
            li!= error.msg